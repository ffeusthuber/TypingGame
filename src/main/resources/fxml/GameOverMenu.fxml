<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640" prefWidth="480" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adapter.in.GameOverMenuController">
    <VBox alignment="center" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Text text="GAME OVER" styleClass="header, bold, centered"/>
        <Text>You typed for:</Text>
        <Text fx:id="typingTimeText" styleClass="bold">00:00:000</Text>
        <Button onAction="#handleRestartButton" text="Restart Game" prefWidth="150.0"/>
        <Button onAction="#handleExitButton" text="Exit" prefWidth="150.0"/>
    </VBox>
</AnchorPane>
